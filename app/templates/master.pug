
extends ./base

block prepend body
	header
		nav.navbar.navbar-expand-lg.navbar-light.fixed-top
			.container
				a.navbar-brand.m-0(href='/home')
					img.logo.rounded-circle.img-fluid(src="/img/logo.png", alt="")
					| Villa Martha Resort
				button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
					span.navbar-toggler-icon
				#navbarResponsive.collapse.navbar-collapse
					ul.navbar-nav.ml-auto
						li.nav-item.active
							a.nav-link(href='/home')
								| Home
								span.sr-only (current)
						if !currentUser.isAdmin
							li.nav-item
								a.nav-link(href='/reservation') Reservation
						if currentUser.isAdmin
							li.nav-item
								a.nav-link(href='/admin/verifypending') Verification
							li.nav-item
								a.nav-link(href='/admin/reports') Reports
						li.nav-item
							a.nav-link(href='/gallery') Gallery
						li.nav-item
							a.nav-link(href='/logout') Logout

	block main

	footer.py-4.bg-dark
		.container.py-2
			p.m-0.text-center.text-white Copyright Â© Villa Martha Resort 2018
			center
				iframe(src='https://www.facebook.com/plugins/share_button.php?href=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&layout=button_count&size=large&mobile_iframe=true&width=106&height=28&appId', width='106', height='28', style='border:none;overflow:hidden', scrolling='no', frameborder='0', allowtransparency='true')

