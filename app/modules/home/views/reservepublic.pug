extends ../../../templates/master

block main
	.container
		.row
			.col-sm-12.mx-auto
				.container
					form(method="POST" action="/reserve/public")#regForm
						.tab.container
							.row
								h3.ml-4 Reserve Details
							.row
								p.ml-4.lead Please choose a date and time when you want to schedule your reservation. (1/3)
							.row
								.col-sm-6.pl-0
									.form-group
										#datetimepicker4.input-group.date(data-target-input='nearest')
											input.form-control.datetimepicker-input.mt-4(id='datetimepicker1',type='text', data-target='#datetimepicker1', name='datDate',placeholder="Input Date")
											.input-group-append.mt-4(data-target='#datetimepicker4', data-toggle='datetimepicker')
												.input-group-text
													i.fa.fa-calendar(aria-hidden='true')
							.form-group#ifYes
								.row
									label Choose Time:
									.col-sm-12.p-0
										.row
											.col-sm-6.p-0
												label.btn.btn-primary.btn-block
													input#optionday1(value='1',type='radio', name='optionday', autocomplete='off')
													|  Day
											.col-sm-6.p-0
												label.btn.btn-primary.ml-1.btn-block
													input#optionday2(value='0',type='radio', name='optionday', autocomplete='off')
													|  Night
						.tab.container
							.row
								h3.ml-4 Reserve Tickets
							.row
								p.ml-4.lead Please choose how many tickets you want to reserve and select the quantity of cottage you want to reserve below. We also have rooms that you can reserve. (2/3)
							.row.mt-3
								.col-md-6.text-center
									h3.d-inline Adult &nbsp;
									select(name='adult')
										- var i = 0
										while i <= 50
											option=i++
								.col-md-6.text-center
									h3.d-inline Child &nbsp;
									select(name='child')
										- var i = 0
										while i <= 50
											option=i++
							.row.mt-5
								h3.ml-4 Cottages
							.row.mt-2
								.col-lg-4.col-md-6.mb-4.mx-auto
									.card
										img.card-img-top(src='/img/umbrella.jpg', alt='')
										.card-body
											h4.card-title Umbrella
											p.card-text
												| An umbrella that can accomdate 4 persons.
										.card-footer.text-center
											select(name='basic')
												- var i = 0
												while i <= 5
													option=i++
								.col-lg-4.col-md-6.mb-4.mx-auto
									.card
										img.card-img-top(src='/img/smallcottage.jpg', alt='')
										.card-body
											h4.card-title Small
											p.card-text
												| A small cottage that can accomodate 8-10 persons.
										.card-footer.text-center
											select(name='medium')
												- var i = 0
												while i <= 5
													option=i++
								.col-lg-4.col-md-6.mb-4.mx-auto
									.card
										img.card-img-top(src='/img/bigcottage.jpg', alt='')
										.card-body
											h4.card-title Big
											p.card-text
												| A big cottage that can accomodate 10-16 persons.
										.card-footer.text-center
											select(name='premium')
												- var i = 0
												while i <= 5
													option=i++
						.tab.container
							.row
								h3.ml-4 Reserve Rooms
							.row
								p.ml-4.lead You're almost done! select the quantity of rooms you want to reserve below. (3/3)
							.row.mt-2
								.col-lg-4.col-md-6.mb-4.mx-auto
									.card
										img.card-img-top(src='/img/smallroom.jpg', alt='')
										.card-body
											h4.card-title A/C Small
											p.card-text
												| a small cozy room that has a twin sized bed.
										.card-footer.text-center
											select(name='rBasic')
												- var i = 0
												while i <= 5
													option=i++
								.col-lg-4.col-md-6.mb-4.mx-auto
									.card
										img.card-img-top(src='/img/bigroom.jpg', alt='')
										.card-body
											h4.card-title A/C Big
											p.card-text
												| Lorem ipsum dolor sit amet, consectetur adipisicing elit. Explicabo magni sapiente, tempore debitis beatae culpa natus architecto.
										.card-footer.text-center
											select(name='rMedium')
												- var i = 0
												while i <= 5
													option=i++
								.col-lg-4.col-md-6.mb-4.mx-auto
									.card
										img.card-img-top(src='/img/pavilion.jpg', alt='')
										.card-body
											h4.card-title Pavilion
											p.card-text
												|A Large spaced cottage that can accomodate 3 Families.
										.card-footer.text-center
											select(name='rPremium')
												- var i = 0
												while i <= 5
													option=i++
						.text-right
							button.btn.btn-secondary(type="button" id="prevBtn" onclick="nextPrev(-1)") Previous
							button.btn.btn-success.ml-1(type="button" id="nextBtn" onclick="nextPrev(1)") Next
					.text-center.m-5
						span.step
						span.step
						span.step
